<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:background="@color/green_title"
    >
    <!--三种情况：返回键，支付，统购-->
    <RelativeLayout
        android:id="@+id/top_title_left"
        android:layout_width="@dimen/title_height"
        android:layout_height="@dimen/title_height"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/title_back"
            style="@style/wrap"
            android:background="@drawable/title_main_back"
            android:visibility="visible"
            />
            <TextView
                android:id="@+id/notice"
                style="@style/wrap"
                android:drawableTop="@drawable/notice"
                android:text="公告"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/red_round_tv"
                android:layout_marginLeft="20dp"
                style="@style/wrap"
                android:background="@drawable/red_round"
                android:visibility="gone"
                />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >
       <TextView
           android:id="@+id/mid_title"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_alignParentRight="true"
        android:id="@+id/top_title_right"
        android:layout_width="@dimen/title_height"
        android:layout_height="@dimen/title_height"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/right_title"
            style="@style/wrap"
            />

    </RelativeLayout>
</RelativeLayout>