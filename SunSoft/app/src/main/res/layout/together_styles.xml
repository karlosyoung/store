<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70"
        android:background="@color/color_2AAC62"
        android:minHeight="?attr/actionBarSize"
        android:orientation="horizontal">
    </RelativeLayout>

    <RadioGroup
        android:layout_marginTop="@dimen/dimen_10"
        android:id="@+id/goods_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:minHeight="?attr/actionBarSize">

    <RadioButton
        android:id="@+id/boy_title_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/boy_selected"
        android:layout_marginRight="@dimen/dimen_20"
        android:button="@null"
        android:checked="true"/>

        <RadioButton
            android:id="@+id/girl_title_right"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_height="match_parent"
            android:background="@drawable/girl_select"
            android:button="@null"/>
    </RadioGroup>
</merge>